<div class="wrapper">
  <div class="container">
    <div align="center">
      <h1>Liste des Ingrédients</h1>
        <%= link_to 'Ajouter un ingrédient', new_ingredient_path %>
        <ul>
          <% @ingredients.each do |ingredient| %>
            <li style="list-style: none">
              <%= link_to ingredient.name, ingredient_path(ingredient) %>
                <% if policy(ingredient).update? %>
                <%= link_to 'delete', ingredient_path(ingredient), method: :delete %>
                <%= link_to 'edit', edit_ingredient_path(ingredient)%>
                <% end %>
            </li>
          <% end %>
        </ul>
    </div>
  </div>
</div>
