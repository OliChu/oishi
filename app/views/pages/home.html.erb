        <a class="card-link" href="#" ></a>
        </div>
      <div class="card-info">
        <h2><%= recipe.title %></h2>
        <p>Un classique rapide et facile!</p>
      <div class="prep_time">
        <p><%= recipe.preparation_time%> minutes</p>
      </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
