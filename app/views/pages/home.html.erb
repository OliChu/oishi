    <p class="progressif">La gastronomie japonaise simplifiée</p>
  </div>
</div>

<script type="text/javascript">
var progressif = jQuery('.progressif');
var text = progressif.text() ; // on met le texte dans une variable
var text_length = text.length; // on mesure la longueur du texte
progressif.text(''); // on vide la div de son texte, pour pouvoir le remettre

var new_text = ''; // on crée une variable qui contiendra le nouveau texte
var i = 0;
// et on lance une fonction qui se répétera automatiquement
var timer = setInterval(function(){
    // on modifie la nouvelle variable
    new_text = new_text + text[i];
    // on l'injecte dans la div
    progressif.text(new_text);

    if(i < text_length-1) {
        // si on n'a pas fini, on incrémente i de 1
        i++;
    }
    else {
        // c'est la fin, on arrête le timer
        clearInterval(timer);
    }

}, 100);

</script>



