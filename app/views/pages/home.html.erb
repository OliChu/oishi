<div class="structure">
  <div class="bande">
    <div class="banner-content">
      <h2 class="bottom-right">OISHI</h2>
    </div>
  </div>
</div>
<div class="incipit">
  <div><h2>/ La Gastronomie Japonaise Simplifi√©e /</h2></div>
</div>
<div class="cardholder">
  <div class="row">
  <% @recipes.each do |recipe| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),  url('<%= cl_image_path recipe.photos[0].path, crop: :fill %>');">
      <div class="card-category">Popular</div>
